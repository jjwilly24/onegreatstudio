    <%= form.label :title %>
    <%= form.text_field :title, class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :genre %>
    <%= form.text_field :genre, class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :cdn %>
    <%= form.number_field :cdn, class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :created_at %>
    <%= form.datetime_select :created_at, class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :updated_at %>
    <%= form.datetime_select :updated_at, class:"form-control" %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
